<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form_custom" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="///button[@name='post']" position="replace">
                    <button name="post" states="draft" string="Post" type="object" class="oe_highlight" groups="entry_post.group_post_approval"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>